{% extends '@Hotel/base.html.twig' %}

{% block body %}
    <h1>Season</h1>

    <table class="table table-responsive table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{% if season.startDate %}{{ season.startDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{% if season.endDate %}{{ season.endDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Percentage</th>
                <td>{{ season.percentage }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{% if season.type %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('season_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('season_edit', { 'id': season.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

{% extends '@Hotel/base.html.twig' %}

{% block body %}
    <h1>Invoices list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Orderdate</th>
                <th>Checkindate</th>
                <th>Checkoutdate</th>
                <th>Adults</th>
                <th>Childeren</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for invoice in invoices %}
            <tr>
                <td><a href="{{ path('invoice_show', { 'id': invoice.id }) }}">{{ invoice.id }}</a></td>
                <td>{% if invoice.orderDate %}{{ invoice.orderDate|date('Y-m-d') }}{% endif %}</td>
                <td>{% if invoice.checkinDate %}{{ invoice.checkinDate|date('Y-m-d') }}{% endif %}</td>
                <td>{% if invoice.checkoutDate %}{{ invoice.checkoutDate|date('Y-m-d') }}{% endif %}</td>
                <td>{{ invoice.adults }}</td>
                <td>{{ invoice.childeren }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('invoice_show', { 'id': invoice.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('invoice_edit', { 'id': invoice.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('invoice_new') }}">Create a new invoice</a>
        </li>
    </ul>
{% endblock %}

{% extends '@Hotel/base.html.twig' %}

{% block body %}
    <h1>Arrangement</h1>

    <table class="table table-responsive table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ arrangement.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ arrangement.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ arrangement.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ arrangement.price }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('arrangement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('arrangement_edit', { 'id': arrangement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

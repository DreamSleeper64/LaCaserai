{% extends '@Hotel/base.html.twig' %}

{% block body %}
    <h1>Rooms list</h1>

    <table class="table table-responsive table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td><a href="{{ path('room_show', { 'id': room.id }) }}">{{ room.id }}</a></td>
                <td>{{ room.name }}</td>
                <td>{{ room.price }}</td>
                <td>{{ room.description }}</td>
                <td>{{ room.type }}</td>
                <td>
                    <a class="glyphicon glyphicon-eye-open" href="{{ path('room_show', { 'id': room.id }) }}"></a> |
                    <a class="glyphicon glyphicon-edit" href="{{ path('room_edit', { 'id': room.id }) }}"></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="col-md-12">
            <div class="col-md-4">
                <div class="col-md-1">
                    <a class="btn btn-success" href="{{ path('room_new') }}">Create a new room</a>
                </div>
            </div>
        </div>
{% endblock %}

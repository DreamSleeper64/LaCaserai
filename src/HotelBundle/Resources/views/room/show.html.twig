{% extends '@Hotel/base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Room</h1>

        <table class="table table-responsive table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ room.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ room.name }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ room.price }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ room.description }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ room.type }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td><img class="img img-thumbnail img-responsive" src="{{ asset('%image_directory/')  }}{{ image.imageUrl }}/"></td>
                </tr>

            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('room_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('room_edit', { 'id': room.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}

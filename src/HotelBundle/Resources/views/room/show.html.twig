{% extends '@Hotel/base.html.twig' %}

{% block body %}
        <div class="nav navbar-collapse navbar-inverse navbar-fixed-bottom">
            <div class="navbar-btn">
                <a  href="{{ path('room_index') }}">
                    <button class="btn btn-default">Back</button>
                </a>
                <a href="{{ path('room_edit', { 'id': room.id }) }}">
                <button class="btn btn-primary">Edit</button>
                </a>
                <div class="pull-right">
                    {{ form_start(delete_form) }}
                    <button class="btn btn-danger" type="submit">Delete Room</button>
                    {{ form_end(delete_form) }}
                </div>
                </div>

            </div>

        </div>
        <div class="col-md-12">
            <div class="col-md-1">
            </div>
            <div class="col-md-1">
            </div>
            <div class="col-md-1">

            </div>
        </div>
    </div>
    <div class="container">
        <h1>Room</h1>

        <table class="table table-responsive table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ room.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ room.name }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ room.price }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ room.description }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ room.type }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td><img class="img img-thumbnail img-responsive" src="{{ asset('%image_directory/')  }}{{ image.imageUrl }}/"></td>
                </tr>

            </tbody>
        </table>
    </div>
{% endblock %}
